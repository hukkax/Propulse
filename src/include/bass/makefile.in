BASSPATH = ..
# get absolute path
BASSPATH := $(shell cd $(BASSPATH); pwd)

FLAGS = -Os -I$(BASSPATH) -L$(BASSPATH) -L$(BASSPATH)/x64 -lbass -lm -Wl,--no-warn-search-mismatch,-rpath,$(BASSPATH):$(BASSPATH)/x64
FLAGS += $(foreach pkg,$(PACKAGES),`pkg-config $(pkg) --cflags --libs`)
ifneq (,$(findstring libglade,$(PACKAGES)))
FLAGS += -export-dynamic
# path to glade file
FLAGS += -D'GLADE_PATH="$(shell pwd)/"'
endif

.PHONY: all clean

%: %.c
	$(CC) $*.c $(FLAGS) -o $@
